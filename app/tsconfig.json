{
  "compilerOptions": {
    "module": "esNext",
    "moduleResolution": "Node",
    "target": "es2018",
    "lib": ["esnext", "dom"],
    "jsx": "preserve",
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "baseUrl": ".",
    "preserveSymlinks": true,
    "allowJs": true,
    "checkJs": true,
    "noImplicitAny": false,
    "outDir": "build",
    "paths": {
      "/*": [
        "./*"
      ],
      "meteor/*": [
        "node_modules/@types/meteor/*",
        ".meteor/local/types/packages.d.ts"
      ],
      "meteor/aldeed:collection2": [
        "packages/collection2/collection2.js"
      ]
    },
    "resolveJsonModule": true,
    "types": ["node", "mocha"],
    "esModuleInterop": true,
  },
  "vueCompilerOptions": {
    "target": 2
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    ".meteor",
    "./packages/**"
  ],
  "typeAcquisition": {
    "include": [
      "meteor"
    ]
  }
}